# Ghost CMS
GHOST_API_URL=https://your-site.ghost.io
GHOST_CONTENT_API_KEY=your-content-api-key
GHOST_WEBHOOK_SECRET=your-webhook-secret

# FMG Suite
FMG_LOGIN_URL=https://secure.fmgsuite.com/login
FMG_USERNAME=your-username
FMG_PASSWORD=your-password
FMG_TARGET_URL=https://secure.fmgsuite.com/path/to/submission/page

# FMG Suite CSS Selectors (update after running: npm run debug:fmg)
FMG_USERNAME_SELECTOR=#username
FMG_PASSWORD_SELECTOR=#password
FMG_LOGIN_BUTTON_SELECTOR=button[type="submit"]
FMG_TITLE_SELECTOR=#title
FMG_BODY_SELECTOR=#body
FMG_SUBMIT_SELECTOR=button[type="submit"]

# Body field strategy: auto | tinymce | ckeditor | contenteditable | plain
FMG_BODY_STRATEGY=auto

# Optional: selectors to verify submission success/failure
# FMG_SUCCESS_SELECTOR=
# FMG_ERROR_SELECTOR=

# Server
PORT=3000

# Set to "false" to run browser in headed mode (useful for debugging selectors)
HEADLESS=true
